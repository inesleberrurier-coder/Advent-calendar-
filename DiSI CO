function closePopup(){ document.getElementById('popup').style.display='none'; }

function checkQuiz(formId, correct, resId, infoId){
  const form=document.getElementById(formId);
  const selected=form?form.querySelector('input[type=radio]:checked'):null;
  const res=document.getElementById(resId);
  if(!res) return;
  if(!selected){ res.textContent='S√©lectionnez une r√©ponse !'; return; }
  if(selected.value===correct) res.textContent='Bonne r√©ponse ! üëè';
  else res.textContent=`Loup√© ! La bonne r√©ponse est ${correct}.`;
  if(infoId){ const el=document.getElementById(infoId); if(el) el.style.display='block'; }
}

function checkOpenAnswer12(){
  const v=document.getElementById('quiz12Input').value.trim();
  const r=document.getElementById('quiz12Result');
  if(!r) return;
  if(!v) { r.textContent='Veuillez entrer une r√©ponse.'; return; }
  r.innerHTML='R√©ponse : une abeille ne produit qu\'1/12 de cuill√®re √† caf√© de miel, soit environ 7 grammes.';
}
